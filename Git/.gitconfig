[user]
	name = Joel Esko
	email = joel@yuio.se

[core]
	autocrlf = input

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	# Show files ignored by git:
	ign = ls-files -o -i --exclude-standard

[push]
	default = matching
